<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>CaseWasSubmittedByEmailCorrectly</fullName>
        <description>Case Was Submitted By Email Correctly</description>
        <protected>false</protected>
        <recipients>
            <field>SuppliedEmail</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>OnlineStoreEmailTemplates/EmailToCaseDoneCorrectly</template>
    </alerts>
    <rules>
        <fullName>Send Notification That Email To Case Done Correctly</fullName>
        <actions>
            <name>CaseWasSubmittedByEmailCorrectly</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Origin</field>
            <operation>equals</operation>
            <value>Email</value>
        </criteriaItems>
        <description>Sends Notification That  Email To Case was Done Correctly</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
